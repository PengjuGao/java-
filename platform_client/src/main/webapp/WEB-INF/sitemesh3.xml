<?xml version="1.0" encoding="UTF-8"?>
<sitemesh>
	<!-- 指明满足“/exclude.jsp*”的页面，将被排除，不被装饰 
	
	<mapping path="/" exclude="true" />
	-->
	<mapping path="/platform/home/doDownload*" exclude="true" />
	<mapping path="/platform/framework/download*" exclude="true" />
	<!-- 指明满足“/*”的页面，将被“/WEB-INF/views/decorators/decorator.html”所装饰 -->
	<mapping path="/platform/*" decorator="/WEB-INF/views/sitemesh/sitemesh_project.jsp" />
</sitemesh>